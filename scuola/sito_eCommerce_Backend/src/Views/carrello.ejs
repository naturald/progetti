<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="icon" href="/assets/img/logo_sito.png">
    <title>Fisher Company - Carrello</title>

</head>
<body>
    <%- include("partials/nav"); %>
    
    <div id="content" >
        <h1 class="page_title">Carrello</h1>
        <hr class="linea" >
        <div id="cart">
            <% let tot = 0;%> 
            <% if(elements) { %> 
                <% elements.forEach( ele => { %> 
                <div class="cart_ele">
                    <img class="cart_ele_img" src="<%= ele.img  %>">
                    <h3 class="cart_ele_name"><%= ele.name  %></h3>
                    <h3 class="cart_ele_prezzo"><%= ele.price  %>€</h3>
                    <div class="cart_sele_quanti">
                        <span onclick="sendReq('/addToCart/<%= ele.article_id  %>')"><</span>
                        <h3 class="cart_ele_quanti"><%= ele.quant  %></h3>
                        <span onclick="sendReq('/decToCart/<%= ele.article_id  %>')">></span>
                    </div>
                    <span onclick="sendReq('/delEleCart/<%= ele.article_id  %>')">✖</span>
                </div>
                <% tot += ele.price * ele.quant%> 
                <% }); 
            } %>
        </div>
        
        <div id="buy_cart">
            <h3><%= tot %> €</h3>
            <h5 onclick="sendReq('/delCart')">cancella</h5>
            <button class="button">Compra</button>
        </div>

    </div>
   
    <%- include("partials/footer"); %> 
</body>
</html>